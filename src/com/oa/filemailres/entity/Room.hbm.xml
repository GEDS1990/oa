<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.oa.filemailres.entity.Room" table="t_room">
		<id name="id" column="id" length="32">
			<generator class="uuid" />
		</id>
		
		<property name="name" />
		<property name="equipment" />
		<property name="state" />
		<many-to-one name="employee" cascade="all" not-null="true"  class="com.oa.personal.entity.Employee"  column="emp_id"/>
		<property name="undefined" />
		<set name="meetings" cascade="delete" inverse="true" >
			<key column="room_id" />
			<one-to-many class="com.oa.filemailres.entity.Meeting" />
		</set>

		
	</class>
</hibernate-mapping>